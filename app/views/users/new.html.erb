<div class="register-form">
  <h2 class="display-4 text-center">Sign Up</h2>
  <h6 class="display-4 text-center">
    Been here already? <%= link_to "Login", login_path, class: "login-link"%>
  </h6>
  <hr>
  <%= form_with model: User.new do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, "Phone Number" %>
      <%= f.number_field :phone_number, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit "Register", class: "btn register-btn" %>
  <% end %>
</div>
